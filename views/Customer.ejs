        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="tile-body">
                        <table class="table table-hover table-bordered" id="sampleTable">
                            <thead>
                                <tr align="center">
                                    <!-- <th>รหัสลูกค้า</th> -->
                                    <th>เลขบัตรประชาชน</th>
                                    <th>ชื่อ-นามสกุล</th>
                                    <th>ที่อยู่</th>
                                    <th>เบอร์โทรศัพท์</th>
                                    <th>อีเมลล์</th>
                                    <!-- <th>แก้ไข</th> -->
                                </tr>
                            </thead>
                            <tbody align="center">
                                <% for(var i=0; i < cus.length; i++) { %>
                                <tr>
                                    <td><%= cus[i].customer_citizen_id %></td>
                                    <td><%= cus[i].customer_first_name + ' ' + cus[i].customer_last_name %></td>
                                    <td><%= cus[i].address.bloc + ' ' + cus[i].address.district + ' ' + cus[i].address.sub_district
                                        + ' ' + cus[i].address.province  + ' ' + cus[i].address.postcode %></td>
                                    <td><%= cus[i].customer_telephone %></td>
                                    <td><%= cus[i].customer_email %></td>
                                    <!-- <td><button type="button" class="btn btn-outline-warning" data-toggle="modal"
                                            data-toggle="modal" data-target=".EditModalCenter">แก้ไข</button></td> -->
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Modal  แก้ไข -->
    <div class="modal fade EditModalCenter" tabindex="-1" role="dialog" aria-labelledby="EditModalCenter"
        aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <form action="mangeemployee/update/" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="EditModalCenter">
                            แก้ไขข้อมูลลูกค้า</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
